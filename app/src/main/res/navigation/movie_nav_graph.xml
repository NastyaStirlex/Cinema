<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_nav_graph"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.nastirlex.cinema.presentation.movie.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" >

        <argument
            android:name="movieId"
            app:argType="string" />
        <argument
            android:name="movieName"
            app:argType="string" />
        <argument
            android:name="poster"
            app:argType="string" />
        <argument
            android:name="age"
            app:argType="string" />
        <argument
            android:name="frames"
            app:argType="string[]" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="tags"
            app:argType="string[]" />

        <action
            android:id="@+id/action_movieFragment_to_episode_nav_graph"
            app:destination="@id/episode_nav_graph">

            <argument
                android:name="preview"
                app:argType="string" />
            <argument
                android:name="episodeId"
                app:argType="string" />
            <argument
                android:name="episodeName"
                app:argType="string" />
            <argument
                android:name="movieId"
                app:argType="string" />
            <argument
                android:name="movieName"
                app:argType="string" />
            <argument
                android:name="moviePoster"
                app:argType="string" />
            <argument
                android:name="filePath"
                app:argType="string" />
            <argument
                android:name="description"
                app:argType="string" />

        </action>

    </fragment>

    <include app:graph="@navigation/episode_nav_graph" />

</navigation>